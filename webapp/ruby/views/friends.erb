<h2>友だちリスト</h2>
<div class="row panel panel-primary" id="friends">
  <dl>
    <% friends.each do |friend| %>
    <dt class="friend-date"><%= friend[:created_at] %></dt><dd class="friend-friend"><a href="/profile/<%= friend[:account_name] %>"><%= friend[:nick_name] %></a></dd>
    <% end %>
  </dl>
</div>
